<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:gravity="right|bottom"
            android:text=""
            android:textSize="30dp"
            android:cursorVisible="false"
            android:ellipsize="start"
            android:maxLines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="←"
            android:textSize="30dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="c"
            android:textSize="30dp" />

        <Button
            android:id="@+id/jia"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="+"
            android:textSize="30dp" />

        <Button
            android:id="@+id/jian"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <Button
            android:id="@+id/hey"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="hey"
            android:textSize="25dp" />

        <Button
            android:id="@+id/binary"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="bin"
            android:textSize="25dp" />

        <Button
            android:id="@+id/zuokuo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="("
            android:textSize="30dp" />

        <Button
            android:id="@+id/youkuo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text=")"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/cheng"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="×"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/chu"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="÷"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >

                <Button
                    android:id="@+id/one"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:text="2"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:text="3"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >

                <Button
                    android:id="@+id/point"
                    android:layout_width="80dp"
                    android:layout_height="65dp"
                    android:text="."
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="163dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textSize="30dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            >

            <Button
                android:id="@+id/dengyu"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="="
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>